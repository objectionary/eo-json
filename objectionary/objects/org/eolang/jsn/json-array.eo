+alias org.eolang.collections.list
+alias org.eolang.txt.text
+home https://github.com/objectionary/eo-json
+package org.eolang.jsn

[value] > json-array

  value > @

  [] > as-string
    reduce. > array-str-res!
      list
        value
      ""
      [a x]
        joined. > @
          text ""
          * a (x.as-string) ", "
    joined. > @
      text ""
      * "[" array-str-res "]"

  [index] > at
    value.at index > @

  [v] > with
    json-array (value.with v) > @
